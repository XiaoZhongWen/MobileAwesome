<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MeFragment"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008cc8"
        >

        <ImageView
            android:id="@+id/logn_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/discount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_go"
            android:layout_below="@+id/logn_btn"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:layout_below="@+id/discount"
            android:layout_alignLeft="@+id/discount"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_yh"
            android:layout_below="@+id/logn_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折扣卡"
            android:layout_below="@+id/card"
            android:layout_alignLeft="@+id/card"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/sail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_sail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_below="@id/logn_btn"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:layout_below="@+id/sail"
            android:layout_alignLeft="@+id/sail"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/menu_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>